@model Dish

<div class="jumbotron">
    <h1 class="display-4">Add a Dish</h1>
</div>
<main>
    <form asp-action="CreateDish" asp-controller="Home" method="post">
        <table class="table table-borderless">
            <tr>
                <td><label asp-for="Name"></label></td>
                <td><input class="form-control" asp-for="Name"></td>
            </tr>
            <tr>
                <td><label asp-for="ChefId"></label></td>
                <td><select class="form-control" asp-for="ChefId">
                @foreach (var chef in ViewBag.AllChefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }
                </select></td>
            </tr>
            <tr>
                <td><label asp-for="Calories"></label></td>
                <td><input class="form-control" asp-for="Calories"></td>
            </tr>
            <tr>
                <td><label asp-for="Tastiness"></label></td>
                <td><select class="form-control" asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select></td>
            </tr>
            <tr>
                <td><label asp-for="Description"></label></td>
                <td><textarea class="form-control" asp-for="Description"></textarea></td>
            </tr>
        </table>
        <button class="btn btn-primary" type="submit">Add Dish</button>
    </form>
    <br>
    <span asp-validation-for="Name"></span>
    <br>
    <span asp-validation-for="ChefId"></span>
    <br>
    <span asp-validation-for="Calories"></span>
    <br>
    <span asp-validation-for="Tastiness"></span>
    <br>
    <span asp-validation-for="Description"></span>
</main>