@model Chef

<div class="jumbotron">
    <h1 class="display-4">Add a Chef</h1>
</div>
<main>
    <form asp-action="CreateChef" asp-controller="Home" method="post">
        <table class="table table-borderless">
            <tr>
                <td><label asp-for="FirstName"></label></td>
                <td><input class="form-control" asp-for="FirstName"></td>
            </tr>
            <tr>
                <td><label asp-for="LastName"></label></td>
                <td><input class="form-control" asp-for="LastName"></td>
            </tr>
            <tr>
                <td><label asp-for="Dob"></label></td>
                <td><input class="form-control" type="date" asp-for="Dob"></td>
            </tr>
        </table>
        <button class="btn btn-primary" type="submit">Add Chef</button>
    </form>
    <br>
    <span asp-validation-for="FirstName"></span>
    <br>
    <span asp-validation-for="LastName"></span>
    <br>
    <span asp-validation-for="Dob"></span>
</main>
