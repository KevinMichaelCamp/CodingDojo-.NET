@model LoginUser

<h4>Login</h4>
<form asp-action="Login" asp-controller="Home" method="post">
    <table class="table table-borderless">
        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input class="form-control" asp-for="Email"></td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td><input class="form-control" asp-for="Password"></td>
        </tr>
    </table>
    <button class="btn btn-primary" type="submit">Login</button>
</form>
<br>
<span asp-validation-for="Email"></span>
<br>
<span asp-validation-for="Password"></span>