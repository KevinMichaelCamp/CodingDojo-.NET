@model Category

<div class="jumbotron">
    <h1 class="display-4">Categories</h1>
</div>
<main>
    <div class="row">
        <div class="col">
            <h4>New Category</h4>
            <form asp-action="AddCategory" asp-controller="Home" method="POST">
                <table class="table table-borderless">
                    <tr>
                        <td><label asp-for="Name"></label></td>
                        <td><input class="form-control" asp-for="Name"></td>
                    </tr>
                </table>
                <button class="btn btn-primary" type="submit">Create</button>
            </form>
        </div>
        <div class="col">
            <h4>Existing Categories</h4>
            @foreach (var category in @ViewBag.Categories)
            {
                <p><a href="/categories/@category.CategoryId">@category.Name</a></p>
            }
        </div>
    </div>
</main>