@model User

<div class="jumbotron">
    <h1 class="display-4">Entity Demo</h1>
</div>
<main>
    <h1>All Users</h1>
    <table class="table">
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </thead>
        <tbody>
        @foreach (var user in ViewBag.AllUsers)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.CreatedAt</td>
                <td>@user.UpdatedAt</td>
                <td><div class="btn-group">
                        <a href="/edit/@user.UserId"><button class="btn btn-warning btn-sm">Edit</button></a>
                        <a href="/delete/@user.UserId"><button class="btn btn-danger btn-sm">Delete</button></a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</main>