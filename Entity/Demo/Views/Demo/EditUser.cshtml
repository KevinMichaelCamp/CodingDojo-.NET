@model User

<div class="jumbotron">
    <h1 class="display-4">Edit User</h1>
</div>
<main>
    <form asp-action="UpdateUser" asp-controller="Demo" asp-route-userId="@ViewBag.User.UserId" method="post">
        <table class="table-borderless addUser">
            <tr>
                <td><label asp-for="FirstName"></label></td>
                <td><input class="form-control" asp-for="FirstName" value="@ViewBag.User.FirstName"></td>
            </tr>
            <tr>
                <td><label asp-for="LastName"></label></td>
                <td><input class="form-control" asp-for="LastName" value="@ViewBag.User.LastName"></td>
            </tr>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td><input class="form-control" asp-for="Email" value="@ViewBag.User.Email"></td>
            </tr>
            <tr>
                <td><label asp-for="Password"></label></td>
                <td><input class="form-control" asp-for="Password" value="@ViewBag.User.Password"></td>
            </tr>
        </table>
        <button class="btn btn-primary font-weight-bold m-5" type="submit">Update User</button>
    </form>
    <br>
    <span asp-validation-for="FirstName"></span>
    <br>
    <span asp-validation-for="LastName"></span>
    <br>
    <span asp-validation-for="Email"></span>
    <br>
    <span asp-validation-for="Password"></span>
</main>